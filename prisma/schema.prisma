generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model hero {
  id          Int      @id @default(autoincrement())
  title1      String?  @db.VarChar(50)
  title2      String?  @db.VarChar(50)
  title3      String?  @db.VarChar(50)
  title4      String?  @db.VarChar(50)
  subtitle    String   @db.VarChar(200)
  description String   @db.VarChar(500)
  img         String   @db.VarChar(300)
  createdAt   DateTime @default(now()) @db.Timestamp(0)
  updatedAt   DateTime @default(now()) @updatedAt @db.Timestamp(0)
}



model Gallery {
  id      Int    @id @default(autoincrement())
  cat_name String @db.VarChar(50)
  images Gallery_img[]
}
model Gallery_img {
  id      Int    @id @default(autoincrement())
  img_url String @db.VarChar(400)
  public_id String @db.VarChar(100)
  cat_id Int
  gallery Gallery @relation(fields: [cat_id], references: [id], onDelete: Cascade)
}